.timers
  margin: 0
  padding: 0
  list-style-type: none

.timer
  skin: isle

  display: inline-block

  width: 160px
  height: 100px

  margin: $m
  padding: $m

  text-align: center

.timer__title
  skin: input small

  width: 100%


.timer__value
  display: block
  font-size: 2em
  line-height: 2em
  min-height: 2em

.timer__button
  kind: button
  skin: button one-element
