$timer_width = 160px
$timer_height = 100px

.timers
  margin: 0
  padding: 0
  list-style-type: none

.timer
  skin: isle

  position: relative
  display: inline-block

  width: $timer_width
  height: $timer_height

  margin: $m
  padding: $s $m $m

  text-align: center
  vertical-align: top

  transition:
    width .4s,
    height .4s,
    padding .4s,
    visibility .4s,
    margin-left .4s,
    margin-right .4s,
    margin-top .1s linear .4s,
    margin-bottom .1s linear .4s

  &:hover .timer__archive
    opacity: .4

.timer__title__input
  skin: input small

  width: 100%

.timer__title__text
  padding: $xs $s
  margin-bottom: -2px
  text-align: left
  font-size: $islands_text_s
  white-space: nowrap
  text-overflow: ellipsis
  overflow-x: hidden

.timer__value
  display: block
  font-size: 1.5em
  line-height: 1.5em
  min-height: 1.5em

.timer__button
  kind: button
  skin: button one-element
  -webkit-transition: opacity .2s ease .2s;

.timer__archive
  position: absolute
  left: $m
  bottom: $m
  cursor: pointer
  opacity: 0
  transition: opacity .4s

.is-disabled
  cursor: default !important;
  opacity: 0.6;

.timer_runned .fa-play
.timer_zeroed .fa-pause
.timer_paused .fa-pause
  display: none

.timer_new
  line-height: $timer_height

.timer_archive
  width: 0
  height: 0
  margin: 0
  padding: 0
  overflow: hidden
  visibility: hidden;

